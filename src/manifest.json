{
  "manifest_version": 2,
  "name": "rosemary",
  "description": "Bookmark advanced search",
  "default_locale": "en",
  "options_page": "options.html",
  "permissions": [
    "bookmarks",
    "contextMenus",
    "tabs",
    "<all_urls>",
    "storage"
  ],
  "icons": {
    "16": "icons/16.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  },
  "background": {
    "scripts": [
      "js/background.js"
    ],
    "persistent": false
  },
  "devtools_page": "devtools.html",
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "__MSG_extName__",
    "default_icon": {
      "19": "icons/19.png",
      "38": "icons/38.png"
    }
  }
}